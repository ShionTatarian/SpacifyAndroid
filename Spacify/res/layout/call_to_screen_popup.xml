<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="closeExtraPopupFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/popup_control_box"
        android:orientation="vertical"
        android:padding="@dimen/margin_normal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/call_bubble_to_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCallToScreenClick"
                android:src="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/call_bubble_to_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCallToScreenClick"
                android:src="@android:drawable/ic_menu_mylocation" />

            <ImageButton
                android:id="@+id/call_bubble_to_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCallToScreenClick"
                android:src="@android:drawable/ic_media_next" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/call_bubble_off_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCallToScreenClick"
            android:src="@android:drawable/ic_delete" />
    </LinearLayout>

</FrameLayout>